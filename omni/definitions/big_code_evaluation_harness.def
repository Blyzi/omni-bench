Bootstrap: docker
From: ghcr.io/nuprl/multipl-e-evaluation

%post
    # Install system dependencies
    apt-get update
    apt-get install -y git

    git clone https://github.com/Blyzi/bigcode-evaluation-harness
    cd bigcode-evaluation-harness

    pip install --upgrade pip
    pip install torch
    pip install -e .
    pip install transformers accelerate --upgrade

    

